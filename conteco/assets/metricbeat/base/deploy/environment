#!/usr/bin/env bash

# this file contains the default settings
# scaling parameters are applied after loading defaults

# GLOBAL REPLACEMENTS
DOLLAR='$'
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_METRICBEAT_COMMAND'
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_METRICBEAT_COMMAND="metricbeat -e -strict.perms=false"

# START VARIABLES kibana.base
export CONTECO_DC_METRICBEAT_ENVIRONMENT=
export CONTECO_DC_METRICBEAT_VOLUMES=
export CONTECO_DC_METRICBEAT_PORTS="5601:5601"
export CONTECO_DC_METRICBEAT_NETWORKS="${CONTECO_ECOSYSTEM}_overlay"
export CONTECO_DC_METRICBEAT_DEPLOY=
# END VARIABLES kibana.base
