#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS='metricbeat.base'
export CONTECO_DC_GLOBAL_STACKNAMES="metricbeat"
export CONTECO_DC_GLOBAL_VOLUME_LIST="metricbeat_volume"
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_METRICBEAT_ENVIRONMENT,$CONTECO_DC_METRICBEAT_COMMAND,$CONTECO_DC_METRICBEAT_PORTS,$CONTECO_DC_METRICBEAT_NETWORKS,$CONTECO_DC_METRICBEAT_DEPLOY_MODE,$CONTECO_DC_GLOBAL_NETWORKS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_METRICBEAT_NETWORKS="${DOLLAR}{CONTECO_TYPE}_overlay"
export CONTECO_DC_METRICBEAT_DEPLOY_MODE="replicated"
export CONTECO_DC_GLOBAL_NETWORKS="${DOLLAR}{CONTECO_TYPE}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS metricbeat.base
export CONTECO_DC_METRICBEAT_VOLUMES="'/etc:/hostfs/etc:ro','${CONTECO_TYPE}_metricbeat_volume:/usr/share/metricbeat/data'"
export CONTECO_DC_METRICBEAT_DEPLOY_LABELS=
export CONTECO_DC_METRICBEAT_DEPLOY_RESOURCES_LIMITS_CPUS="0.75"
export CONTECO_DC_METRICBEAT_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.01"
export CONTECO_DC_METRICBEAT_DEPLOY_RESOURCES_LIMITS_MEMORY="64m"
export CONTECO_DC_METRICBEAT_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="8m"
# END SETTINGS metricbeat.base

# START TOPLEVEL SETTINGS
export CONTECO_DC_GLOBAL_VOLUMES="${CONTECO_TYPE}_metricbeat_volume: { external: true }"
# END TOPLEVEL SETTINGS
