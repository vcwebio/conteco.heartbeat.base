#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_SERVICES='metricbeat.base'
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_METRICBEAT_ENVIRONMENT,$CONTECO_DC_METRICBEAT_COMMAND,$CONTECO_DC_METRICBEAT_VOLUMES,$CONTECO_DC_METRICBEAT_PORTS,$CONTECO_DC_METRICBEAT_DEPLOY'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_METRICBEAT_ENVIRONMENT=
export CONTECO_DC_METRICBEAT_COMMAND=
export CONTECO_DC_METRICBEAT_VOLUMES="'/etc:/hostfs/etc:r'"
export CONTECO_DC_METRICBEAT_PORTS=
export CONTECO_DC_METRICBEAT_DEPLOY=
# END GLOBAL SETTINGS

# START SETTINGS metricbeat.base
export CONTECO_DC_METRICBEAT_ENVIRONMENT_OUTPUTTARGET="console"
export CONTECO_DC_METRICBEAT_NETWORKS="${CONTECO_ECOSYSTEM}_overlay"
export CONTECO_DC_METRICBEAT_DEPLOY_MODE="replicated"
export CONTECO_DC_METRICBEAT_DEPLOY_REPLICAS="1"
export CONTECO_DC_METRICBEAT_DEPLOY_RESOURCES_LIMITS_CPUS="0.75"
export CONTECO_DC_METRICBEAT_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.01"
export CONTECO_DC_METRICBEAT_DEPLOY_RESOURCES_LIMITS_MEMORY="64m"
export CONTECO_DC_METRICBEAT_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="8m"
# END SETTINGS metricbeat.base

# START TOPLEVEL SETTINGS
export CONTECO_DC_GLOBAL_VOLUMES=
export CONTECO_DC_GLOBAL_NETWORKS="${CONTECO_DC_METRICBEAT_NETWORKS}: { external: true }"
# END TOPLEVEL SETTINGS
