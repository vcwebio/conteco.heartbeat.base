#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS="heartbeat.base"
export CONTECO_DC_GLOBAL_STACKNAMES="conteco_dc_heartbeat"
export CONTECO_DC_GLOBAL_BOOTSTACKS=""
export CONTECO_DC_GLOBAL_RUNSTACKS="conteco_dc_heartbeat"
export CONTECO_DC_GLOBAL_VOLUME_LIST="${DOLLAR}{CONTECO_STACKPREFIX}_heartbeat_data_volume,${DOLLAR}{CONTECO_STACKPREFIX}_heartbeat_monitors_volume"
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_HEARTBEAT_ENVIRONMENT,$CONTECO_DC_HEARTBEAT_COMMAND,$CONTECO_DC_HEARTBEAT_PORTS,$CONTECO_DC_HEARTBEAT_VOLUMES,$CONTECO_DC_HEARTBEAT_NETWORKS,$CONTECO_DC_GLOBAL_VOLUMES,$CONTECO_DC_GLOBAL_NETWORKS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_HEARTBEAT_VOLUMES="'/etc:/hostfs/etc:ro','${DOLLAR}{CONTECO_STACKPREFIX}_heartbeat_data_volume:/usr/share/heartbeat/data','${DOLLAR}{CONTECO_STACKPREFIX}_heartbeat_monitors_volume:/usr/share/heartbeat/monitors.d'"
export CONTECO_DC_HEARTBEAT_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay"
export CONTECO_DC_GLOBAL_VOLUMES="${DOLLAR}{CONTECO_STACKPREFIX}_heartbeat_volume: { external: true }"
export CONTECO_DC_GLOBAL_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS heartbeat.base
export CONTECO_DC_HEARTBEAT_DEPLOY_MODE="replicated"
export CONTECO_DC_HEARTBEAT_DEPLOY_RESOURCES_LIMITS_MEMORY="64m"
export CONTECO_DC_HEARTBEAT_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="8m"
# END SETTINGS heartbeat.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
